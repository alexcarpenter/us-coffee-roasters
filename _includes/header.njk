<header class="c-header">
  <div class="c-header__primary">
    <span class="c-badge" id="roasters-length">{{ roasters.length }}</span>
    <h1 class="c-header__title"><a href="/">{{ site.title }}</a></h1>
    <p class="c-header__description">Crowd-sourced list of US coffee roasters</p>
  </div>

  <div class="c-header__secondary">
    <ul class="c-nav">
      <li class="c-nav__item"><a class="c-nav__anchor" href="/">Roasters</a></li>
      <li class="c-nav__item"><a class="c-nav__anchor" href="https://github.com/alexcarpenter/us-coffee-roasters/issues/new">Submit roaster  <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path d="M0 0h24v24H0z" fill="none"></path><path fill="currentcolor" d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"></path></svg></a></li>
    </ul>

    <h2 class="u-margin-bottom-025">Recent interviews</h2>
    <ul class="c-facepile">
      {% for interview in collections.interviews %}
      <li class="c-facepile__item">
        <a href="{{ interview.url }}" class="c-avatar">
          {% if interview.data.social.twitter %}
            <img src="https://avatars.io/twitter/{{ interview.data.social.twitter }}" alt="{{ interview.data.title }}" loading="lazy">
          {% else %}
            <img src="/interview.data.avatar" alt="{{ interview.data.title }}" loading="lazy">
          {% endif %}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</header>
